import java.util.Scanner;
public class task4{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        for(int i = 1; i<= N; i++){
            int X = sc.nextInt();
            int Y = sc.nextInt();
            int sum = 0;
            int count = 0;
            while(count <= Y){
                if(X%2 != 0){
                    sum = sum + X;
                    count++;
                }
                X++;
            }
            System.out.println(sum);
        }
    }
}